{
	"info": {
		"_postman_id": "9169e3ec-723c-4031-b0ea-0608b3ba3e5d",
		"name": "Student API (Home Assignment)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "19739409"
	},
	"item": [
		{
			"name": "Get All Students",
			"item": [
				{
					"name": "Get All Students",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/students",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"students"
							]
						},
						"description": "Gets a list of all students."
					},
					"response": []
				},
				{
					"name": "Get Students (Filtered & Sorted)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/students?department=Computer Science&sortBy=gpa&sortDir=DESC",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"students"
							],
							"query": [
								{
									"key": "department",
									"value": "Computer Science",
									"description": "Filter by department"
								},
								{
									"key": "sortBy",
									"value": "gpa",
									"description": "Sort by column"
								},
								{
									"key": "sortDir",
									"value": "DESC",
									"description": "Sort direction"
								},
								{
									"key": "gpa_gte",
									"value": "90",
									"description": "Example: Get students with GPA >= 90",
									"disabled": true
								}
							]
						},
						"description": "Gets students filtered by 'Computer Science' and sorted by GPA descending."
					},
					"response": []
				},
				{
					"name": "Get Top Honor Students by Department",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/students/honor-candidates/top-by-department",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"students",
								"honor-candidates",
								"top-by-department"
							]
						},
						"description": "Gets the single highest-scoring honor student (GPA >= 90) from each department."
					},
					"response": []
				}
			]
		},
		{
			"name": "Add New Student",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"firstName\": \"Alice\",\n  \"lastName\": \"Johnson\",\n  \"email\": \"alice.j@example.com\",\n  \"department\": \"Physics\",\n  \"gpa\": 94.5\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/students",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"students"
					]
				},
				"description": "Adds a new student. Validation rules (email, GPA 0-100) apply."
			},
			"response": []
		},
		{
			"name": "Update Existing Student",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"firstName\": \"Alice\",\n  \"lastName\": \"Smith\",\n  \"email\": \"alice.smith@example.com\",\n  \"department\": \"Physics\",\n  \"gpa\": 95.0\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/students/1",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"students",
						"1"
					]
				},
				"description": "Updates student with ID 1. \n\n**Make sure to change the ID in the URL to a valid one!**"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080/api/v1",
			"type": "string"
		}
	]
}